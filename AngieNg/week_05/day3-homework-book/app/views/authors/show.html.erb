<h1><%= @author.pen_name %></h1>
<%= image_tag(@author.image, :class => 'feature') %>
<p>Name: <%= @author.name %></p>
<p>Nationality: <%= @author.nationality %></p>
<p>Date of Birth: <%= @author.dob.strftime '%B, %e, %Y' %></p>
<p>Genre: <%= @author.genre %></p>
<p>Period: <%= @author.period %></p>

<% @author.books.each do |author| %>
  <%= link_to(image_tag(author.image, :class => 'thumb'), author) %>
<% end %>

<div class="controls">
  <%= link_to('Edit Author', edit_author_path(@author)) %>
  <%= link_to('Delete Author', author_path(@author), :method => 'delete') %>
</div>