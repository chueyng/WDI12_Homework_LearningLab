<h1><%= @book.title %></h1>
<p><%= image_tag(@book.image, :class => 'feature')%></p>
<p>Description: <%= @book.desc %> </p>
<p>Author: <%= link_to(@book.author.name, @book.author) unless @book.author.nil? %></p>
<p>Pages: <%= @book.pages %></p>
<p>Published Date: <%= @book.publ_date %></p>
<p>Publisher: <%= @book.publisher %></p>

<%= link_to('Edit Book', edit_book_path(@book)) %>
<%= link_to('Delete Book', book_path(@book), :method => 'delete', :data => {:confirm => "Are you sure?"}) %>
